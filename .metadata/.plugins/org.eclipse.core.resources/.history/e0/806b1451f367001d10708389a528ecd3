package empresa;

public class Conta {
	int numeroConta;
	String titular;
	float saldo;
	float limite;

	public Conta(int numeroConta, String titular, float saldo, float limite) {
		super();
		this.numeroConta = numeroConta;
		this.titular = titular;
		this.saldo = saldo;
		this.limite = limite;
	}

	void sacar(double valor) {
		if (valor > limite || valor > saldo) {
			System.out.println("Não foi possivel sacar, consulte limites");
			System.out.println();
		} else {
			saldo -= valor;
		}
	}

	boolean depositar(double valor) {
		if(valor<=0) {
			return false;
		}
		
		saldo += valor;
		return true;
	}
	
	boolean tranferir(float valor, Conta conta1, Conta conta2) {
		if (valor > limite || valor > saldo) {
			return false;
		}
		conta1.saldo=conta1.saldo-valor;
		
		conta2.saldo=conta2.saldo+valor;
		return true;
	}

	void info() {
		System.out.println("Numero da conta: " + numeroConta);
		System.out.println("Nome do Titular: " + titular);
		System.out.printf("Saldo %.2f \n", saldo);
		System.out.printf("Limite %.2f \n\n", limite);

	}

}
